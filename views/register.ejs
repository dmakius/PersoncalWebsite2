<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
    <title>Register</title>
    <% if(mobile){ %>
      <meta name="viewport" content="user-scalable=no,target-densitydpi=device-dpi" />
      <link rel="stylesheet" href="public/VerticalMario/css/mobile-styles.css">
    <% } %>
  </head>
  <body>
    <%- include('./partials/header'); %>
    <div class="container">
      <div id="flashAlert"></div>
      <h1>Register Page</h1>
      <form>
        <div class="error" style="background-color: red;"></div>
        <br />
        <label for="username">Username</label><br />
        <input type="text"  class="form-control" id="username" required /><br />
        <label for="password">Password</label><br />
        <input type="password"  class="form-control" id="password" required /><br />
        <input type="submit" class="btn btn-primary" value="register" /><br />
      </form>
      <br>
      <br>
      <a href="/login">Already registered? Login</a>
    </div>
    <script type="module">
      import Register from "../public/js/register.js"
      Register.register();
    </script>
  </body>
</html>